{
    "$schema": "http://json-schema.org/schema#",

    "type": "array",
    "items": {
        "type": "object",

        "properties": {
            "id":      { "type": "string", "pattern": "^P\\w\\d{1,2}$" },
            "alias":   { "type": "string" },
            "comment": { "type": "string" }
        },

        "required": [ "id", "alias" ]
    }
}
